 <div id="organization">
  <div id="organizers" class="column">
    <div class="main-color">
      Organizadores
    </div>
    <% @organizers_with_image.each do |organizer| %>
    <div class="sponsor float-left">
      <a target="_blank" href="<%= organizer.website_url %>">
        <img src="<%= organizer.image_url %>" alt="<%= organizer.name %>"/>
      </a>
    </div>
    <% end %>

    <div style="clear: both"></div>

    <% @organizers_without_image.each do |organizer| %>
    <div class="organizer">
      <a target="_blank" href="<%= organizer.website_url %>">
        <span><%= organizer.name %></span>
      </a>
    </div>
    <% end %>
  </div>

  <div id="sponsors" class="column">
    <div class="main-color">
      Patrocinio
    </div>
    <% @sponsors.each do |sponsor| %>
      <div class="sponsor">
        <a target="_blank" href="<%= sponsor.website_url %>">
          <img src="<%= sponsor.image_url %>" alt="<%= sponsor.name %>" style="width:250px"/>
        </a>
      </div>
    <% end %>
  </div>
</div>
